{
  "author": "Breeze Lin",
  "name": "breader",
  "version": "1.0.0",
  "private": true,
  "description": "A simple RSS reader.",
  "dependencies": {
    "chardet": "^0.7.0",
    "electron-is-dev": "^1.0.1",
    "feedparser": "^2.2.9",
    "iconv-lite": "^0.4.24"
  },
  "homepage": "https://github.com/breeze2/breader",
  "main": "public/electron.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "yarn tsc-main",
    "preelectron-dev": "yarn tsc-main",
    "preelectron-dist": "yarn build",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dist": "yarn electron-pack",
    "electron-pack": "electron-builder build",
    "electron-start": "electron .",
    "electron-rebuild": "electron-rebuild",
    "tsc-main": "tsc --project ./main",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/chardet": "^0.5.0",
    "@types/feedparser": "^2.2.2",
    "@types/jest": "24.0.1",
    "@types/node": "11.9.0",
    "@types/pouchdb-browser": "^6.1.3",
    "@types/pouchdb-find": "^6.3.4",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-intl": "^2.3.17",
    "@types/react-redux": "^7.0.1",
    "@types/react-virtualized": "^9.18.12",
    "antd": "^3.14.1",
    "babel-plugin-import": "^1.11.0",
    "concurrently": "^4.1.0",
    "customize-cra": "^0.2.11",
    "devtron": "^1.4.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-rebuild": "^1.8.4",
    "immutable": "^4.0.0-rc.12",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "pouchdb-browser": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "react": "^16.8.1",
    "react-app-rewired": "^2.1.0",
    "react-dom": "^16.8.1",
    "react-intl": "^2.8.0",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.5",
    "react-virtualized": "^9.21.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.3.3",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "io.github.breeze2.breader",
    "npmRebuild": false,
    "mac": {
      "category": "news",
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "menuCategory": true,
      "createDesktopShortcut": true,
      "allowElevation": false
    },
    "files": [
      "build/**/*"
    ]
  }
}
